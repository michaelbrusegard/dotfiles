{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "tools": {
    "bash": true,
    "edit": true,
    "write": true,
    "read": true,
    "grep": true,
    "glob": true,
    "list": true,
    "patch": true,
    "todowrite": true,
    "todoread": true,
    "webfetch": true
  },
  "mcp": {
    "ark-ui": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@ark-ui/mcp"
      ],
      "enabled": true
    },
    "shadcn": {
      "type": "local",
      "command": [
        "npx",
        "shadcn@latest",
        "mcp"
      ],
      "enabled": true
    },
    "tanstack": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@tanstack/cli",
        "mcp"
      ],
      "enabled": true
    }
  },
  "agent": {
    "plan": {
      "tools": {
        "bash": false,
        "edit": false,
        "write": false,
        "patch": false
      }
    },
    "build": {
      "permission": {
        "bash": {
          "git *": "deny",
          "*": "ask"
        }
      }
    }
  }
}
